layout {
  match: VideoInfo (videoInfo)
  mode (Details)

  content {
    section {
      content {
        attribution-link {
          label {
            template-macro (GoToYoutube)
          }
          url ("https://youtube.com/watch?v=#{value(videoInfo.videoId)}")
        }
        video {
          url ("#{value(videoInfo.videoFile)}")
          poster ("#{value(videoInfo.videoThumbnail)}")
        }
      }
    }
  }
}
