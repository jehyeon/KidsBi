action (SolveQuiz) {
  type (Commit)
  description (Solve quizzes)
  confirm {
    by (SolveQuizAnswer)
  }
  collect {
    input (quizProgress) {
      type (QuizProgress)
      min (Required) max (One)

      default-init {
        intent {
          goal: InitQuizProgress
          value: QuizCategory(Korean) // teomporary
        }
      }

      validate {
        if (quizProgress.done == true) {
          halt
        }
      }
    }
  }
  output (QuizResult)
}
